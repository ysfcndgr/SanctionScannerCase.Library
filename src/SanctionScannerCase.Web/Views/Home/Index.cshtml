<head>
    <link href="~/css/index.css" rel="stylesheet" />
    <link href="~/css/toastr.css" rel="stylesheet" />
    <link href="~/css/bootsrap.css" rel="stylesheet" />
</head>

<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-4">
            <form enctype="multipart/form-data" method="post" id="book-form" autocomplete="off">
                <div class="form-group">
                    <label for="name">Kitap Adı</label>
                    <input type="text" id="name" class="form-control" name="name">
                </div>
                <div class="form-group mt-3">
                    <label for="author">Kitabın Yazarı</label>
                    <input type="text" id="author" class="form-control" name="author">
                </div>
                <div class="form-group mt-3">
                    <label for="bookphoto">Kitap Fotoğrafı</label>
                    <input type="file" id="bookphoto" class="form-control" name="bookphoto">
                </div>
                <div class="form-group mt-3">
                    <label for="State" style="display:inline-block">Ödünç verilecek mi ?</label>
                    <input type="checkbox" style="display:inline-block" id="State" class="form-check" name="State">
                </div>
                <div id="borrower-group" style="display:none;" class="form-group mt-3">
                    <label for="borrower">Ödünç alanın isimi</label>
                    <input type="text" id="borrower" class="form-control" name="borrower">
                </div>
                <div id="loan-group" style="display:none;" class="form-group mt-3">
                    <label for="loandate">Ödünç alanın geri getirme tarihi</label>
                    <input type="date" id="loandate" class="form-control" name="loandate">
                </div>
                <button type="submit" class="mt-3 btn btn-success btn-block add-btn">Kaydet</button>
            </form>
        </div>
        <div class="col-sm-12 col-md-8">
            <table class="table mt-5">
                <thead>
                    <tr>
                        <th>Kitap Adı</th>
                        <th>Yazar</th>
                        <th>Resim</th>
                        <th>Durumu</th>
                        <th>Geri Getireleceği Tarih</th>
                        <th>Ödünç Alan Kişi</th>
                        <th>#</th>
                    </tr>
                </thead>
                <tbody id="book-list">
                </tbody>
            </table>
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center" id="pagination-container">
                </ul>
            </nav>

        </div>
    </div>
</div>


<div class="modal fade" id="borrowerModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Ödünç ver</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="borrowerForm">
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Ödünç alan:</label>
                        <input type="text" class="form-control" name="loanname" id="loanname">
                    </div>
                    <div class="form-group">
                        <label for="message-text" class="col-form-label">Tarih:</label>
                        <input type="date" class="form-control" id="loandateborrower" name="loandateborrower">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" id="borrowerSave" dataid="#" class="btn btn-primary">Kaydet</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
            </div>
        </div>
    </div>
</div>


<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/toastr.js"></script>
<script src="~/js/popper.js"></script>
<script src="~/js/bootsrap.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/js/formvalidate.js" type="text/javascript" charset="UTF-8"></script>
<script src="~/js/indexformevents.js"></script>
<script src="~/js/moment.js"></script>

